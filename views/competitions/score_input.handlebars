<div class="p-2">
    <div class="overflow-x-auto">
        <table class="table">
            <!-- head -->
            <thead>
                <tr>
                    <th>ID</th>
                    <th>User_ID</th>
                    <th>Competition_ID</th>
                    <th>Score</th>
                </tr>
            </thead>
            <!-- body -->
            <tbody>
                {{#each result.items}}
                <tr>
                    <th>{{this.login_id}}</th>
                    <td>{{this.Competitor}}</td>
                    <td>{{this.name}}</td>
                    <td>
                        <form method="post" action="/competitions/score_change" class="flex flex-col gap-2">
                            <div class="flex flex-col">
                                <label>Score</label>
                                <input id="score" type="number" name="score" value="{{this.score}}" />
                                <input type="hidden" name="id" value="{{this.login_id}}" />
                                {{>form_buttons}}
                            </div>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>